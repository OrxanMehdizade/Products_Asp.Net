@model List<Product>

<div class="container">
    <div class="row justify-content-center">
        @if (Model.Count > 0)
        {
            
            @foreach (var item in Model)
            {
                <div class="col-sm" style="margin-top: 10px; width:18rem;">
                    <div class="card mx-auto" style="width: 18rem; border:2px solid #007bff">
                        <div class="card-body" style="width:18rem;">
                            <p style="font-size:20px;color:#007bff" class="card-title">Product Name: @item.ProductName</p>
                            <p style="color:#007bff" class="card-text">Price : @item.Price</p>
                            <p style="color:#007bff" class="card-text">Description: @item.Description</p>
                            <a asp-controller="Product" asp-action="Get" asp-route-id="@item.Id" class="btn btn-primary">Product</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
                            <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-primary">Update</a>

                        </div>
                    </div>
                </div>
            }
            <a asp-controller="Product" asp-action="AddProduct" style="margin-top:20px" class="btn btn-primary">Add</a>
        }
    </div>
</div>