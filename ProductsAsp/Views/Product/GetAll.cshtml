@model List<Product>

<div class="container">
    <div class="row justify-content-center">
        @if (Model.Count > 0)
        {
            <a asp-controller="Product" asp-action="AddProduct" class="btn btn-outline-info">Add</a>
            @foreach (var item in Model)
            {
                <div class="col-sm" style="margin-top: 10px;">
                    <div class="card mx-auto" style="width: 15rem;">
                        <div class="card-body">
                            <h5 class="card-title">Product Name: @item.ProductName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Price : @item.Price</h6>
                            <p class="card-text">Description: @item.Description</p>
                            <a asp-controller="Product" asp-action="Get" asp-route-id="@item.Id" class="btn btn-outline-info">Product</a>

                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <h1>Empty, add product</h1>
        }
    </div>
</div>