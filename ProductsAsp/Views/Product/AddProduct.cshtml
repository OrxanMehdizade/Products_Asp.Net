@model Product

<form asp-controller="Product" asp-action="AddProduct" method="post">
    <div style="margin: 0 auto">
        <div class="form-group">
            <input style="margin: 20px; width: 300px" asp-for="ProductName" placeholder="Product Name..." class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input style="margin: 20px; width: 300px" asp-for="Description" placeholder="Description..." class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input style="margin: 20px; width: 300px" asp-for="Price" placeholder="Price..." class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>